# starts a test installation of pcb

# execute pcb

# If the first argument is "-gdb" then run PCB inside the gdb
# debugger.  

TEST_PATHS="--lib-path ../lib --lib-newlib @TOPSRCDIR@/newlib --element-path ../lib --font-path @TOPSRCDIR@/src"
TEST_CMDS="--lib-command-dir ../lib"

unset XUSERFILESEARCHPATH

if [ "X$1" = "X-gdb" ]; then
	shift
	tmpf=/tmp/pcbtest.gdb.$$
	echo set args $TEST_PATHS $TEST_CMDS "$@"  > $tmpf
	echo "unset env XUSERFILESEARCHPATH" >> $tmpf
	exec gdb -x $tmpf ./pcb-bin
	rm -f $tmpf
else
	exec ./pcb-bin $TEST_PATHS $TEST_CMDS "$@"
fi

